{{!-- after the user has logged in/ signed up, this is the dashboard page --}}
  <!-- If the user is logged in, render the content -->
{{!-- {{#if loggedIn}} --}}
{{!-- Content section --}}
  <div class="container" id="dashboard">
    <h1>Welcome to Your Dashboard</h1>
    
   {{#if posts}}
    <div class="card" id="posts">
      <h2>Your Blog Posts:</h2>
      <ul>
        {{#each posts}}
          <li>
            <a href="/blog/{{id}}">
              <h3>{{title}}</h3> --}}
            </a>
            <p>{{content}}</p>
            <p>Created on: {{formatDate created_at}}</p> --}}
            <p>Comments:
            <ul>
              {{#each comments formatDate created_at}}
                <li>{{this}}</li>
              {{/each}}
              </p>
          </li>
        {{/each}}
      </ul> --}}
      </div>
    {{/if}} --}}
    {{!-- Add a new blog post --}}
    <div class="newPost">
    <h2>Create a New Blog Post:</h2>
    <form action="/api/posts" method="POST">
      <div class="form-group">
        <label for="title">Title:</label>
        <input type="text" id="title" name="title" required>
      </div>
      <div class="form-group">
        <label for="content">Content:</label>
        <textarea id="content" name="content" required></textarea>
      </div>
      <button type="submit" id="newPost">Create Post</button>
    </form>
    </div>
    
</div>
  <script src="/js/addPost.js"></script>
  <script src="/js/viewBlogPost.js"></script>
  <script src="/js/logout.js"></script>