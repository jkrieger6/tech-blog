{{!-- this is the landing page when the user arrives --}}
<body>
  <header>
    <h1>Tech Blog</h1>
    <nav>
      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/dashboard">Dashboard</a></li>
        {{#if user}}
          <li><a href="/logout">Logout</a></li>
        {{else}}
          <li><a href="/login">Login</a></li>
        {{/if}}
      </ul>
    </nav>
  </header>
  
  <main>
    {{#if blogPost}}
      <h2>Recent Posts</h2>
      <ul>
        {{#each blogPost}}
          <li>
            <h3>{{title}}</h3>
            <p>Posted by {{author}}</p>
          </li>
        {{/each}}
      </ul>
    {{else}}
      <p>No posts available.</p>
    {{/if}}
  </main>
  
  <footer>
    <p>&copy; 2023 Tech Blog. All rights reserved.</p>
  </footer>
  
  <script src="main.js"></script>
</body>
</html>
